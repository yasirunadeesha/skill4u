<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_theme"
    tools:context=".skill">

  <!-- Menu Icon -->
  <ImageView
      android:id="@+id/openmenu"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:srcCompat="@drawable/menu"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <!-- Title -->
  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Skill Buddy"
      android:textColor="#FFFFFF"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintVertical_bias="0.02"
      app:layout_constraintHorizontal_bias="0.5" />

  <!-- Location Label -->

  <!-- Location Toggle -->

  <!-- MapView -->

  <TextView
      android:id="@+id/fingertext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="68dp"
      android:text="Enable Location"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ToggleButton
      android:id="@+id/locationToggle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:layout_marginEnd="16dp"
      android:textOff="Location OFF"
      android:textOn="Location ON"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toEndOf="@id/fingertext"
      app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.gms.maps.MapView
      android:id="@+id/mapView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      app:layout_constraintTop_toBottomOf="@id/fingertext"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/finduser" />

  <!-- Find Users Button -->
  <Button
      android:id="@+id/finduser"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_marginBottom="16dp"
      android:text="Find Users Nearby"
      android:textColor="#FFFFFF"
      android:backgroundTint="#154D71"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
