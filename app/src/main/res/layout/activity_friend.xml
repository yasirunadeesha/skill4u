<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_theme"
    android:orientation="vertical"
    tools:context=".friend">

    <!-- menu button, title, and username -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <!-- Menu button -->
        <ImageView
            android:id="@+id/openmenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/menu" />

        <!-- title -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/openmenu"
            android:text="Friends"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Username display -->
        <TextView
            android:id="@+id/username_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <!-- My Friends / Add Friends / Requests -->
    <RadioGroup
        android:id="@+id/friendsSegmentGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- My Friends tab -->
        <RadioButton
            android:id="@+id/rb_my_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/segmented_button_left_background"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="My Friends"
            android:textColor="@color/segmented_button_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Add Friends tab -->
        <RadioButton
            android:id="@+id/rb_add_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Friends"
            android:textColor="@color/segmented_button_text_color"
            android:background="@drawable/segmented_button_center_background"
            android:button="@null"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Friend Requests tab -->
        <RadioButton
            android:id="@+id/rb_friend_requests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/segmented_button_right_background"
            android:button="@null"
            android:gravity="center"
            android:padding="8dp"
            android:text="Requests"
            android:textColor="@color/segmented_button_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RadioGroup>

    <!-- Main content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- My Friends section -->
        <LinearLayout
            android:id="@+id/my_friends_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <ListView
                android:id="@+id/friend_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />
        </LinearLayout>

        <!-- Add Friends section -->
        <LinearLayout
            android:id="@+id/add_friends_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:id="@+id/list_add_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />
        </LinearLayout>

        <!-- Friend Requests section -->
        <LinearLayout
            android:id="@+id/friend_request_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:id="@+id/list_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
